<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Logged</h2>
                    <p class="card-text">@{ string username = ViewContext.HttpContext.Session.GetString("User"); }</p>
                    <p class="card-text">You are logged in as: @username</p>
                    <form asp-controller="IO" asp-action="LogOut" method="get">
                        <button type="submit" class="btn btn-primary">Log out</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
